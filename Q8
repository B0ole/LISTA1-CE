#include <stdio.h>
#include <math.h>

int main(){
    int coefA,coefB,coefC;
    double discriminant;

    //printf("insira os valores de a,b,c");
    scanf("%d %d %d", &coefA,&coefB,&coefC);

    discriminant = coefB*coefB-(4*coefA*coefC);

    if(coefA != 0){

        printf("Para os seguintes coeficientes: %d, %d e %d. O delta eh: %.2lf \n", coefA,coefB,coefC,discriminant);

        if(discriminant > 0){
            printf("A equacao possui duas raizes reais distintas.\n");
            printf("As raizes sao: %.2lf e %.2lf", ((-coefB-sqrt(discriminant))/2*coefA) , fabs((-coefB+sqrt(discriminant))/2*coefA));

        }
        if(discriminant < 0){
            printf("A equacao nao possui raizes reais.");

        }    
        if(discriminant == 0){

            printf("A equacao possui duas raizes reais iguais.\n");
            printf("As raizes sao: %.2lf e %.2lf", (-coefB+sqrt(discriminant))/2*coefA);
        }    
    }
    else{
        printf("Se coefA = 0, nao temos uma equacao do segundo grau.");
    }   
    return 0;
}
