#include <stdio.h>


int main()
{
	int operacao;
	double primeiro_numero,segundo_numero;
	printf("");
	scanf("%lf %lf ", &primeiro_numero, &segundo_numero);
	printf("");
	scanf("%d", &operacao);
	
	switch(operacao){
	    case 1:
	    printf("%.3lf", primeiro_numero+segundo_numero);
	    break;
	  
	    case 2:
	    printf("%.3lf", primeiro_numero-segundo_numero);
	    break;
	    case 3:
	    if((primeiro_numero==0)||(segundo_numero==0)){
	        printf("erro");}
	    else{printf("%.3lf", primeiro_numero*segundo_numero);}
	    
	   break;
	   
	   case 4:
	   if(/*(primeiro_numero==0)*||*/(segundo_numero==0)){
	    printf("erro");}
	    else{printf("%.3lf", primeiro_numero/segundo_numero);
	    break;
	    }
	    
	    
	    
	    
	    
	    
	    
	    }
	
	
	
	
	
	
	return 0;
}
