#include <stdio.h>


int main()
{
	int operacao;
	double NUMERO_PRIMEIRO,NUMERO_DOIS;
	printf("");
	scanf("%lf %lf ", &NUMERO_PRIMEIRO, &NUMERO_DOIS);
	printf("");
	scanf("%d", &operacao);
	
	switch(operacao){
	    case 1:
	    printf("%.3lf", NUMERO_PRIMEIRO+NUMERO_DOIS);
	    break;
	  
	    case 2:
	    printf("%.3lf", NUMERO_PRIMEIRO-NUMERO_DOIS);
	    break;
	    case 3:
	    if((NUMERO_PRIMEIRO==0)||(NUMERO_DOIS==0)){
	        printf("erro");}
	    else{printf("%.3lf", NUMERO_PRIMEIRO*NUMERO_DOIS);}
	    
	   break;
	   
	   case 4:
	   if(/*(NUMERO_PRIMEIRO==0)*||*/(NUMERO_DOIS==0)){
	    printf("erro");}
	    else{printf("%.3lf", NUMERO_PRIMEIRO/NUMERO_DOIS);
	    break;
	    }
	    
	    
	    
	    
	    
	    
	    
	    }
	
	
	
	
	
	
	return 0;
}
