#include <stdio.h>

int main(){
    
    //Calculadora
    
    
    double numero1,numero2;
    char op;
    
    //printf("insira dois valores:");
    scanf("%lf %lf", &a,&b);
    
    
    //printf("insira a operacao");
    scanf("%s", &op);
    
    
    if((op=='+')||(op=='-')||(op=='/')||(op=='*')){
        switch(op){
        case '+':
        printf("%.2lf + %.2lf = %.2lf ", numero1, numero2, numero1+numero2);
        break;
        
        case '-':
        printf("%.2lf - %.2lf = %.2lf ", numero1, b, numero1-numero2);
        break;
        
        
        if(b != 0){case '/':
        printf("%.2lf / %.2lf = %.2lf ",numero1, b, numero1/numero2);
        break;
        }
        else{printf("A operacao # eh invalida!");}
        
        case '*':
        printf("%.2lf * %.2lf = %.2lf ", numero1, numero2, numero1*numero2);
        break;
    }
    
    
    
    
    
    
    
    }
    
    else{printf("A operacao # eh invalida!");}
    
    return 0;
}
