#include <stdio.h>

int main(){
    
    
    
    
    double a1,a2;
    char op;
    
    //printf("insira dois valores:");
    scanf("%lf %lf", &a1,&a2);
    
    
    //printf("insira a operacao");
    scanf("%s", &op);
    
    
    if((op=='+')||(op=='-')||(op=='/')||(op=='*')){
        switch(op){
        case '+':
        printf("%.2lf + %.2lf = %.2lf ", a1, a2, a1+a2);
        break;
        
